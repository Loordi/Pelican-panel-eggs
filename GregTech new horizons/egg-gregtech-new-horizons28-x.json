    "scripts": {
        "installation": {
            "script": "#!/bin/bash\n# Gregtech New Horizons V2.8.X Install Script\n\ntrap 'echo \"Error on line $LINENO\"; exit 1' ERR\n: \"${GTVERSION:=2.8.1}\"  # default if not set\nGTNH_ZIP_FILE=\"GT_New_Horizons_${GTVERSION}_Server_Java_17-25.zip\"\n\n#Ensure server directory exists\nif [[ ! -d /mnt/server ]]; then\n  mkdir -p /mnt/server\nfi\n\nBASE_DIR=\"/mnt/server\"\nBACKUP_DIR=\"$BASE_DIR/installtemp\"\n\n#Backup JourneyMapServer if it exists\nif [[ -d \"$BASE_DIR/config/JourneyMapServer\" ]]; then\n  echo \"Backing up JourneyMapServer to $BACKUP_DIR...\"\n  mkdir -p \"$BACKUP_DIR\"\n  cp -r \"$BASE_DIR/config/JourneyMapServer\" \"$BACKUP_DIR/\"\nelse\n  echo \"No JourneyMapServer directory found to back up.\"\nfi\n\n#Delete the old files/folders\necho \"Deleting old files and folders...\"\nrm -rf \\\n  \"$BASE_DIR/config\" \\\n  \"$BASE_DIR/libraries\" \\\n  \"$BASE_DIR/mods\" \\\n  \"$BASE_DIR/lwjgl3ify-forgePatches.jar\" \\\n  \"$BASE_DIR/java9args.txt\"\n\n#Install dependencies\nif command -v apk &>/dev/null; then\n  apk --no-cache add curl unzip\nelif command -v apt &>/dev/null; then\n  apt update && apt install -y curl unzip\nfi\n\n\n#Download and extract GTNH server\ncd \"$BASE_DIR\"\necho \"Downloading and extracting $GTNH_ZIP_FILE...\"\ncurl -L -o \"$GTNH_ZIP_FILE\" \"https://downloads.gtnewhorizons.com/ServerPacks/$GTNH_ZIP_FILE\"\nunzip \"$GTNH_ZIP_FILE\"\nrm -f \"$GTNH_ZIP_FILE\" *.md *.bat\n\nchmod +x startserver-java9.sh\n\n#Restore backed-up files\nif [[ -d \"$BACKUP_DIR\" ]]; then\n  echo \"Restoring files from installtemp...\"\n  cp -r \"$BACKUP_DIR/JourneyMapServer\" \"$BASE_DIR/config\"\nelse\n  echo \"No installtemp folder found \u2014 skipping restore.\"\nfi\n\necho \"Installation process is completed\"",
            "container": "alpine:3.4",
            "entrypoint": "ash"
        }
